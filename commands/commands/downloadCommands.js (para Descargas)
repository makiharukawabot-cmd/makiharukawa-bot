const { downloadMedia } = require('../utils');

module.exports = async (sock, msg, from, body, parts, cmd) => {
  switch (cmd) {
    case '#facebook':
    case '#fb':
      if (parts.length < 2) return sock.sendMessage(from, { text: 'Uso: #facebook [Link]' });
      const fbUrl = parts.slice(1).join(' ');
      const fbVideo = await downloadMedia('facebook', fbUrl);
      if (fbVideo) {
        await sock.sendMessage(from, { video: { url: fbVideo }, mimetype: 'video/mp4' });
      } else {
        await sock.sendMessage(from, { text: 'Ups, no pude descargar.' });
      }
      break;

    // Agrega todos: #hitomi, #mediafire, #mp4, #nhentai, #pinterest, #play, #pornhub, #reel, #tiktok, #twitter, #vermangasporno, #ytsearch con downloadMedia('type', url) o bÃºsquedas.
  }
};
